<div class="backdrop hidden"></div>
<header>
    <div class="logo-name">
        <div class="logo">
            <div class="green"></div>
            <div class="yellow"></div>
            <div class="gray"></div>
            <div class="blue"></div>
        </div>
        <a href="/"><h1>Genius Coding</h1></a>
    </div>
    <nav>
        <ul class="nav-list">
            <% if (links.length > 0) { %>
                <% links.forEach((link) => { %>
                    <li class="nav-list-item">
                        <a class="nav-list-item-link <%= path === link.href ? 'active' : '' %>" data-temp="<%= path %>" href="<%= link.href %>"><%= link.text %></a>
                    </li>
                <% }) %>
            <% } %>
        </ul>
    </nav>
</header>
<% if (message) { %>
    <div class="notif <%= message?.type %>">
        <img src="/images/site-images/notif-<%= message?.type %>.png" alt="<%= message?.type %> notification icon">
        <span><%- message?.content %></span>
        <span class="close">Ã—</span>
    </div>
<% } %>